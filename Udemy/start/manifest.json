{
    "manifest_version": 3,
    "name": "Timer Extention",
    "version": "1.0.0",
    "description": "Hello New World!",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icons": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_title": "Timer Extension action Title",
        "default_popup": "popup/popup.html"
    },
    "options_page": "options/options.html",
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "background": {
        "service_worker": "background/background.js"
    }
}